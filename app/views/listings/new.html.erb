<div id="center">
	<h1>Sell your copy of "<%= @book.title %>" </h1>
	<ul class='form'>
	<% form_for([@book,@listing], :html => {:class => 'new_book_form'}) do |f|%>
		<li>
			<%= f.label :comment %>
			<%= f.text_field :comment %>
		</li>
		<li>
			<%= f.label :price %>
			<%= f.text_field :price%>
		</li>
		<li>
			<%= f.submit "submit"%>
		</li>
	<% end %>	
	</ul>
</div><!--end center-->
