<div id="center">
	<h2> Update listing for "<%= @listing.book.title %>"</h2>
	<% form_for [@user,@listing] do |f|%>

	<fieldset>

		<%= f.label :market_status , "Indicate the status of your listing"%>
		<%= f.select :market_status, { :available => 1 , :pending => 0, :sold => -1} %>
		
		<%= render :partial => 'listings/form', :locals => { :f => f } %>
		

		<%= f.submit 'update'%> or <%= link_to "back to listings" , user_listings_url( @listing	)  %>
	</fieldset>
	<% end %>

</div><!--end center-->