<div id="center">
	<% @books_hash.each do |tag,books| %>
	<table class ='books_index'>
		<caption><%= tag %></caption>
		<thead>
			<tr>
				<th>Title</th>
				<th>ISBN</th>				
				<th>Copies For Sale</th>
				<th>Average Price</th>				
			</tr>
		</thead>
		<tbody>		
			<% books.each do |book|%>
				<tr>
					<td><%= link_to "#{ shorten book.title }", book %></td>
					<td><%= book.isbn %></td>
					<td><%= book.active_listings.count %></td>
					<td><%= book.average_price() %></td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
	</table>
	<p> 
		Have a book that is not on the list? <br />
		<%= link_to "add it to the list", new_book_path %>
	</p>
</div><!--end center-->