<div id="center">

	<table id='books_index_table' class='index'>
	<thead>
		<tr>
			<th>Title</th>
			<th>Edition</th>
			<th>ISBN</th>
			<th>Copies For Sale</th>
			<th>Average Price</th>
		</tr>
	</thead>
	<tbody>
	<% @books.each do |book|%>
	<tr>
	  <td><%= link_to book.title, book %></td>
		<td><%= book.edition %></td>
		<td><%= book.isbn %></td>
		<td><%= book.listings.count %></td>
		<td><%= "$" + book.average_price().to_s%></td>
	</tr>
	<% end %>
	</tbody>
	</table>	
	<p> Have a book that is not on the list? </p>
	<%= link_to "add it to the list", new_book_path %>
</div><!--end center-->
